require "bundler/gem_tasks"
require "rspec/core/rake_task"
require 'standalone_migrations'
require 'klartext'

StandaloneMigrations::Tasks.load_tasks
RSpec::Core::RakeTask.new(:spec)

task :default => :spec

namespace :klartext do
  task :es_setup do
    index = 'klartext'
    types = ['word','post']
    before = Time.now
    es_client = Klartext::ESClient.new
    es_client.delete_indices index
    es_client.create_indices index
    es_client.put_mapping index,types
    printf "took %.2fs\n", Time.now - before
  end

  task :dict do
    dict = Klartext::Dictionary.new "http://folkets-lexikon.csc.kth.se/folkets/folkets_en_sv_public.xml"
    dict.download
  end
end
